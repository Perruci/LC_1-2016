function_inverse_alt_aux[D,R:TYPE]: THEORY

BEGIN

    ASSUMING
      inverse_types: ASSUMPTION (EXISTS (d: D): TRUE) OR (FORALL (r: R): FALSE)
    ENDASSUMING

  f: VAR [D -> R]

  inverse_inverse_alt: LEMMA bijective?[D,R](f) =>
                                                inverse_alt(inverse_alt(f)) = f

END function_inverse_alt_aux
